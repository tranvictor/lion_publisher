@import url('http://fonts.googleapis.com/css?family=Raleway:300,600,700,900')

headerFont = 'Raleway', sans-serif
serifFont = 'Georgia', 'Times New Roman',  serif

topBarHeight = 110px
spinnerColor = #bbb
mainColors = #b81b1b, #15992A, #E56C19, #C1004F, #B81B6C, #691BB8, #1B58B8, #4294DE, #00AAAA, #83BA1F, #D39D09, #E064B7, #C35D15

noteColor = #fc7
