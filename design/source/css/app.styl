		display inline-block
		width 50px
		height 50px
		line-height 50px
		text-align center

section.content
	input[type='file']
		padding 15px
	label
		font-family headerFont
		font-weight 600
		> input,
			textarea,
			select
				margin-top 7px
	input,
	textarea,
	select
		outline none
		font-family headerFont
		font-weight 600
		background-color white
		&:active, &:hover, &:focus
			background-color white
		&.dark
			border 1px solid transparent
			background-color darken(white, 5)
			&:active, &:focus
				background-color darken(white, 10)
			&:hover
				background-color darken(white, 7)
			
	textarea
		font-family serifFont
		font-weight 300
		font-size 15px
		font-style italic
		&.sans
			font-size 14px
			font-family headerFont
			font-weight 600
			font-style normal

.space
	margin-right 5px
	
.space-10
	margin-right 10px
	
.space-left
	margin-left 10px

h1, h2, h3, h4
