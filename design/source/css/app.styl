// perfect scrollbar

.perfect-scrollbar
	position relative
	overflow hidden

// general

.full-width
	width 100%
	margin-left auto
	margin-right auto
	max-width 100%

.full-height
	height 100%
	
ul.colors
	margin 0 0 50px 0
	padding 0
	list-style none
	for color, i in mainColors
