extend minimal

block script

block css

block notifications
  .alert-box.note(data-alert)
    | Your entered email not found. Please check again!
    a.close &times;

block content
  .row
    .small-12.medium-6.medium-centered.large-4.columns
      .badge-form.fadeIn.animated
        h3.title Sign in
        .content
          form(action="login.html", method="post")
            .row
              .small-12.columns
                label
                  | Email
                  input(type="text", placeholder="your@email.com")
              .small-12.columns
                label
                  | Password
                  input(type="password", placeholder="")
            .row
              .small-12.columns
                a(href="") Forgot your password?
              .small-12.columns.text-right
                button.button.badge-color Sign in
