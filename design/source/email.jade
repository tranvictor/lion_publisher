html
  
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    title #{title} Magz
    link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Raleway:300,600,700,900")
    block css
  
  - var font = "'Raleway', sans-serif"
  - var fontFamily = "font-family: " + font + ";"
  - var width = "600px"
  - var bodyStyle = "background-color: white; margin: 0; padding 0;" + fontFamily + "line-height: 1.5em; font-size: 14px;"
  - var tableStyle = "padding: 0; margin: auto; text-align: left; width: " + width + "; background-color: #f7f7f7;"
  - var sectionStyle = "width: " + width + ";"
  - var contentStyle = sectionStyle + ""
  - var bottomStyle = sectionStyle + "text-align: right; background-color: white;"

  body(style=bodyStyle)

    table(style=tableStyle, cellspacing="0", cellpadding="0")
