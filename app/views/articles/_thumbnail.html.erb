<div class="photo">
    <a href="<%= article_url(article) %>" title="Read full articles">
        <figure class="article">
            <div class="title">
                <%= article.title %>
            </div>
            <img src="<%= article.thumbnail %>"/>
            <div class="social-buttons">
                <% if current_user && current_user.admin? %>
                    <%= link_to "remove", article, method: :delete, data: {confirm: 'Are you sure?'}, :title=>"Remove article" %>
                <% end %>
                <%= link_to "share", 'http://www.facebook.com/sharer.php?u=' + article_url(article), :target => :blank, :title =>"Share on Facebook" %>
                <%= link_to "tweet", "http://twitter.com/home?status=#{article.title} #{article_url(article)}",\
                 :target => :blank, :title => "Tweet me" %>
                <%= link_to "+1", 'https://plus.google.com/share?url=' + article_url(article), :target => :blank, :title => "share on Google plus" %>
            </div>
        </figure>
    </a>
</div>
