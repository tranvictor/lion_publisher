<div class="row" >
  <div class="small-12 medium-7 medium-centered large-6 columns">
    <div class="badge-form fadeIn animated">
      <h3 class="title">Sign up</h3>
      <div class="content">
      <%= simple_form_for(resource, :as => resource_name,
                          :url => registration_path(resource_name),
                          html: {class: 'form-horizontal'}) do |f| %>
        <div class="row">
          <div class="small-12 columns">
            <%= f.label :email do %>Email
              <%= f.email_field :email, require: true, autofocus: true %>
            <% end %>
            <% if resource.errors[:email] != [] %>
             <small class="error"%>
              <%= resource.errors[:email][0] %>
              </small>
            <% end %>
          </div>
          <div class="small-12 columns">
            <%= f.label :user_name do %>Username
              <%= f.text_field :user_name, require: true %>
            <% end %>
            <% if resource.errors[:user_name] != [] %>
             <small class="error"%>
              <%= resource.errors[:user_name][0] %>
              </small>
            <% end %>
          </div>
          <div class="small-12 columns">
            <%= f.label :password do %>Password
              <%= f.password_field :password, require: true %>
            <% end %>
            <% if resource.errors[:password] != [] %>
             <small class="error"%>
              <%= resource.errors[:password][0] %>
              </small>
            <% end %>
          </div>
          <div class="small-12 columns">
            <%= f.label :password_confirmation do %>Password Confirmation
              <%= f.password_field :password_confirmation, require: true %>
            <% end %>
            <% if resource.errors[:password_confirmation] != [] %>
             <small class="error"%>
              <%= resource.errors[:password_confirmation][0] %>
              </small>
            <% end %>
          </div>
          <div class="small-12 columns">
            <%= recaptcha_tags %>
          </div>
        </div>
        <div class="row">
          <div class="small-12 columns">
            <%= render "devise/shared/links" %>
          </div>
          <div class="small-12 columns text-right">
            <%= f.submit "Sign up", :class => "button badge-color small" %>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
