<div class="one-search-result">
  <div class="box-hold box search-thumbnail" style="background-image: url(<%= article.thumbnail %>);">
    <a href="<%= article_url(article) %>">
      <span class="author-block">
      </span>
    </a>
  </div>
  <div class="search-body">
    <h3 class="search-result-title"> <%= link_to highlight(article.title || '', key_words), article_url(article) %></h3>
    <div class="body-one-search-result">
      <p class="search-result-body"><%= highlight(article.desc || '', key_words) %></p>
    </div>
  </div>
  <div class="clear-both"></div>
</div>
