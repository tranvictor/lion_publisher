<script type="text/javascript" src="https://www.google.com/jsapi"></script>
<script type="text/javascript">
google.load("visualization", "1", {packages:["corechart"]});
google.setOnLoadCallback(drawChart);
function drawChart() {
  var data = google.visualization.arrayToDataTable(
    [
      ['Date', 'Page views', 'Clicks', 'Estimated earning'],
  <% for d in @tableData %>
      ['<%= d[0] %>', <%= d[1] %>, <%= d[2] %>, <%= d[3] %>],
  <% end %>
  ]);

  var options = {
    title: 'Affiliate Performance',
    hAxis: {title: '',  titleTextStyle: {color: '#333'}},
    backgroundColor: 'whitesmoke',
    aggregationTarget: 'category',
    focusTarget: 'category',
    pointSize: <%= pointSize %>,
    vAxis: {minValue: 0},
    vAxes: [
      {},
      {},
      {gridlines: {count: 0}},
    ],
    series: {
      0: {color: '#f9a732', targetAxisIndex: 0},
      1: {color: '#49afcd', targetAxisIndex: 1},
      2: {color: '#5bb65b', targetAxisIndex: 2},
    }
  };

  var chart = new google.visualization.AreaChart(document.getElementById('<%= canvasID %>'));
  chart.draw(data, options);
}
</script>
