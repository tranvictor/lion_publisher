<div id="edit-page">
  <h3>Edit image</h3>

  <%= simple_form_for @image, html: {class: 'form-horizontal'} do |f| %>
    <div class='form-inputs'>
      <div class="control-group text required">
        <label class="text required control-label">Image</label>
        <div class="controls">
          <img src="<%= @image.content.url(:thumb) %>" alt="" id="img-polaroid">
        </div>
      </div>
      <%= f.input :title %>
    </div>
    <div class='form-actions'>
      <%= f.button :submit, "Update Image", class: "btn btn-primary" %>
    </div>
  <% end %>

</div>